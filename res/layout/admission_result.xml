<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:background="@drawable/main_bg"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
    	android:background="@drawable/main_titlebar_bg"
    	android:orientation="horizontal"
    	android:gravity="center"
    	android:layout_width="fill_parent"
    	android:padding="15dip"
    	android:layout_height="wrap_content">
    	<TextView
    		android:background="@drawable/sub_titlebar_logo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    	<LinearLayout
    		android:layout_marginLeft="10dip"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
	    	<TextView
	    		android:gravity="center"
	    		android:text="전년도 입시결과"
	    		android:textSize="20dip"
	    		android:textStyle="bold"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    	/>
    	</LinearLayout>
    </LinearLayout>
    
    <LinearLayout
    	android:background="@drawable/sub_bg"
    	android:orientation="vertical"
    	android:gravity="center_horizontal"
    	android:layout_width="fill_parent"
    	android:layout_weight="1"
    	android:layout_height="fill_parent">	    
		<ListView
	    	android:id="@+id/admission_result_lv01"
	    	android:dividerHeight="1px"
	    	android:cacheColorHint="#00000000"
	    	android:layout_width="fill_parent"
	    	android:layout_weight="1"
	    	android:layout_height="fill_parent"
	   	/>
	   	
	   	<TextView
	   		android:background="#ffffff"
	   		android:text="※ 수능 : 100만점 기준, \n내신등급 : 9등급\n※ 내신등급은 커트라인입니다."
	   		android:textColor="#000000"
	   		android:layout_width="fill_parent"
	   		android:layout_height="wrap_content"
	   	/>
	   	
   	</LinearLayout>
   	
   	
    
    <ImageView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@drawable/appmain_copyright"
    />
    
</LinearLayout>
