<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
    	android:background="@drawable/main_titlebar_bg"
    	android:orientation="horizontal"
    	android:gravity="center"
    	android:layout_width="fill_parent"
    	android:padding="15dip"
    	android:layout_height="wrap_content">
    	
    	<TextView
    		android:layout_marginLeft="10dip"
    			android:background="@drawable/sub_titlebar_logo"
    			android:layout_width="wrap_content"
    			android:layout_height="wrap_content" 
    		/>
    	
    	<LinearLayout
    		android:orientation="horizontal"
    		android:layout_marginRight="10dip"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
    		
    	
	    	<TextView
	    		android:layout_marginLeft="10dip"
	    		android:id="@+id/pr_user_photolist_textview"
	    		android:text="포토 검색"
	    		android:textSize="20sp"
	    		android:textStyle="bold"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    	/>
    	</LinearLayout>

    </LinearLayout>
    
    <LinearLayout
    	android:gravity="center_horizontal"
    	android:background="@drawable/sub_bg"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
    	<Spinner 
    	 	android:id="@+id/pr_photosearch_spinner"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dip"
	    	
	    	/>
    	<EditText 
    	 	android:id="@+id/pr_photosearch_edittext"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dip"/>
	    <Button 
    	 	android:id="@+id/pr_photosearch_button"
    	 	android:text="검색"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dip"/>	
    </LinearLayout>
    
    <LinearLayout
    	android:background="@drawable/main_copyright_bg"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<ImageView
    		android:background="@drawable/main_copyright_text"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    </LinearLayout>
</LinearLayout>
