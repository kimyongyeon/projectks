<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
    	android:background="@drawable/main_titlebar_bg"
    	android:orientation="horizontal"
    	android:gravity="center"
    	android:layout_width="fill_parent"
    	android:padding="15dip"
    	android:layout_height="wrap_content">
    	<TextView
    		android:background="@drawable/sub_titlebar_logo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    	<LinearLayout
    		android:layout_marginLeft="10dip"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
	    	<TextView
	    		android:gravity="center"
	    		android:id="@+id/board_textview"
	    		android:text="공지사항"
	    		android:textSize="20dip"
	    		android:textStyle="bold"
	    		android:layout_width="wrap_content"
	    		android:layout_height="wrap_content" 
	    	/>
    	</LinearLayout>
    </LinearLayout>
    <LinearLayout
      android:orientation="vertical"
	  android:background="@drawable/sub_bg"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent">
    <LinearLayout
    	android:gravity="center"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	<Spinner 
    	 	android:id="@+id/board_spinner"
    		android:layout_weight="6"
	    	android:layout_width="fill_parent"
	    	android:layout_height="50dip"  	/>
    	<EditText 
    	 	android:id="@+id/board_edittext"
    		android:layout_weight="2"
	    	android:layout_width="fill_parent"
	    	android:layout_height="40dip"/>
	    <LinearLayout
    		android:layout_weight="6"
    		android:gravity="center"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent">	
	    	<Button 
	    		android:id="@+id/board_button"
	    	 	android:background="@drawable/img_ks00_main_search"
		    	android:layout_width="35dip"
		    	android:layout_height="35dip"/>
    	</LinearLayout>	
    </LinearLayout>
    <ListView
    	 android:cacheColorHint="#00000000"
    	 android:layout_weight="1"
    	 android:id="@+id/board_listview"
    	 android:layout_width="fill_parent"
    	 android:layout_height="fill_parent"
    />
    <LinearLayout
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<Button
    		android:id="@+id/board_prev_bt"
    		android:background="@drawable/prevbt"
    		android:layout_weight="1"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
    	/>
    	<Button
    		android:id="@+id/board_next_bt"
    		android:background="@drawable/nextbt"
    		android:layout_weight="1"
    		android:layout_width="fill_parent"
    		android:layout_height="fill_parent" 
    	/>
    </LinearLayout>
    <LinearLayout
    	android:background="@drawable/main_copyright_bg"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<ImageView
    		android:background="@drawable/main_copyright_text"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    </LinearLayout>
    </LinearLayout>
    
    
</LinearLayout>
