<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:background="@drawable/main_bg"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
    <LinearLayout
    	android:background="@drawable/main_titlebar_bg"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<ImageView
    		android:background="@drawable/main_titlebar_logo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    </LinearLayout>
    
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:weightSum="1">
        <ImageView android:id="@+id/imageView1" android:src="@drawable/mainicon_depart" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView2" android:src="@drawable/mainicon_notice" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView3" android:src="@drawable/mainicon_news" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView4" android:src="@drawable/mainicon_calendar" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:id="@+id/linearLayout2" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView5" android:src="@drawable/mainicon_ctl" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView6" android:src="@drawable/mainicon_enterance" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView7" android:src="@drawable/mainicon_elearning" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView8" android:src="@drawable/mainicon_library" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:layout_width="match_parent" android:id="@+id/linearLayout3" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView9" android:src="@drawable/mainicon_map" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView10" android:src="@drawable/mainicon_tel" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView11" android:src="@drawable/mainicon_album" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView12" android:src="@drawable/mainicon_bus" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    </LinearLayout>

    <LinearLayout android:gravity="left" android:layout_marginLeft="13dip"   android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="wrap_content">
        <ImageView android:id="@+id/imageView13" android:src="@drawable/mainicon_food" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
        <ImageView android:id="@+id/imageView14" android:src="@drawable/mainicon_career" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
    </LinearLayout>
    
    <LinearLayout
    	android:background="@drawable/main_copyright_bg"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<ImageView
    		android:background="@drawable/main_copyright_text"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content" 
    	/>
    </LinearLayout>
</LinearLayout>
    
