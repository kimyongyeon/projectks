<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:gravity="center_horizontal"
  android:background="#ffffff"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
       
    <LinearLayout
    	android:background="@drawable/main_titlebar_bg"
    	android:orientation="horizontal"
    	android:gravity="center"
    	android:layout_width="fill_parent"
    	android:padding="15dip"
    	android:layout_height="wrap_content">
    	<TextView
    		android:background="@drawable/sub_titlebar_logo"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    	<LinearLayout
    		android:layout_marginLeft="10dip"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content">
	    	<TextView
	    		android:gravity="center"
	    		android:id="@+id/photoboard_textview"
	    		android:text="포토 업로드"
	    		android:textSize="20dip"
	    		android:textStyle="bold"
	    		android:layout_width="fill_parent"
	    		android:layout_height="fill_parent" 
	    	/>
    	</LinearLayout>
    </LinearLayout>
  <!-- 제목 -->
    <EditText
    	android:id="@+id/pr_user_photowrite_et1"
    	android:hint="제목을 입력하세요."
    	android:singleLine="true"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    />

	<LinearLayout
	  android:orientation="horizontal"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content">
	  <!-- 파일경로 -->    
	    <EditText
	    	android:id="@+id/pr_user_photowrite_et3"
	    	android:hint="이미지를 선택 하세요."
	    	android:textSize="14sp"
	    	android:layout_weight="1"
	    	android:lines="1"
	    	android:editable="false"
	    	android:clickable="false"
	    	android:enabled="false"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content" 
	    />
	    <!-- 파일경로 가져오는 버튼 -->
	    <Button
	    	android:id="@+id/pr_user_photowrite_bt1"
	    	android:background="@drawable/searchbt"
	    	android:layout_weight="2"
	    	android:layout_width="fill_parent"
	    	android:layout_height="wrap_content"
	    />
    </LinearLayout>
    <!-- 내용 -->
    <EditText
    	android:id="@+id/pr_user_photowrite_et2"
    	android:hint="내용을 입력하세요."
    	android:layout_weight="1"
    	android:gravity="left|top"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    />
    <LinearLayout
    	android:orientation="horizontal" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
	    <Button
	    	android:id="@+id/pr_user_photowrite_bt2"
	   		android:background="@drawable/donebt"
	   		android:layout_weight="1"
	   		android:layout_width="fill_parent"
	   		android:layout_height="wrap_content" 
	   	/>
	   	<Button
	   		android:id="@+id/pr_user_photowrite_bt3"
	   		android:background="@drawable/cancelbt"
	   		android:layout_weight="1"
	   		android:layout_width="fill_parent"
	   		android:layout_height="wrap_content" 
	   	/>
   	</LinearLayout>
    <LinearLayout
    	android:background="@drawable/main_copyright_bg"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content">
    	<ImageView
    		android:background="@drawable/main_copyright_text"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content" 
    	/>
    </LinearLayout>
</LinearLayout>
